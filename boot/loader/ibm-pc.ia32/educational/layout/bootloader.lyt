OUTPUT_FORMAT("elf32-i386")
OUTPUT_ARCH("i386")
ENTRY(bootloader_entry)

SECTIONS
{
	. = 0x200000 + SIZEOF_HEADERS;

	/* must appear in first kilobytes */
	.multiboot :
	{
		*(.multiboot)
	}

	.text :
	{
		*(.text)
	}

	.rodata :
	{
		*(.rodata)
	}

	.data :
	{
		*(.data) *(.bss) *(COMMON)
	}

	. = ALIGN(0x1000);

	__early_start = .;

	.early.text :
	{
		*(.early.text)
	}

	.early.data :
	{
		*(.early.data)
	}

	__early_end = .;
}
